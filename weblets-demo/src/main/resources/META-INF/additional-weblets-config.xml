<?xml version="1.0" encoding="UTF-8" ?>
<weblets-config xmlns="http://weblets.dev.java.net/config">

    <weblet>
        <weblet-name>weblets.source</weblet-name>
        <weblet-class>net.java.dev.weblets.demo.sourcecodeweblet.SourcecodeWeblet</weblet-class>
        <init-param>
               <param-name>allowedResources</param-name>
               <param-value> jsp, jspx, html </param-value>
        </init-param>
    </weblet>

    <weblet-mapping>
        <weblet-name>weblets.source</weblet-name>
        <url-pattern>/source/*</url-pattern>
    </weblet-mapping>

    <!--
    We only allow jsp jspx or html extensions to be used by this
    weblet, so no triggering of unwanted ressources can occur
    -->
   
</weblets-config>    
    